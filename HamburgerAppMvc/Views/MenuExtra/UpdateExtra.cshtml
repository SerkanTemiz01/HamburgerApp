@model HamburgerAppMvc.Models.Extra

@{
    ViewData["Title"] = "UpdateExtra";
}

<h1 class="text-uppercase text-center">Update Extra</h1>


<hr />
<div class="row">
    <div class="col-md-4 col-lg-7 col-sm-3">
        <form asp-action="UpdateExtra">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExtraID" />
            <div class="form-group">
                <label asp-for="ExtraName" class="control-label"></label>
                <input asp-for="ExtraName" class="form-control" />
                <span asp-validation-for="ExtraName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input type="number" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Status" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
